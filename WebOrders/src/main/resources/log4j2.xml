<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="warn" strict="true"
	name="XMLConfigTest">
	<Properties>
		<Property name="filename">orders.log</Property>
	</Properties>

	<Appenders>
		<Appender type="Console" name="STDOUT" target="SYSTEM_OUT">
			<Layout type="PatternLayout">
				<Pattern>%d %p %C{1.} [%t] %m</Pattern>
			</Layout>
		</Appender>
		
		<Appender type="File" name="File" fileName="${filename}" append="false">
			<Layout type="PatternLayout">
				<Pattern>%d %p %C{3.} [%t] %m%n</Pattern>
			</Layout>
<!--			Filtering trace, warn, fatal levels 
			<Filters>
				<ThresholdFilter level="debug" onMatch="NEUTRAL" onMismatch="DENY"/>
				<ThresholdFilter level="info" onMatch="NEUTRAL" onMismatch="ACCEPT"/>
				<ThresholdFilter level="warn" onMatch="NEUTRAL" onMismatch="ACCEPT"/>
				<ThresholdFilter level="error" onMatch="ACCEPT" onMismatch="DENY"/>
				<ThresholdFilter level="fatal" onMatch="DENY" onMismatch="NEUTRAL"/>
			</Filters> -->
<!--			Filtering trace, debug, warn, fatal levels  -->
			<Filters>
				<ThresholdFilter level="info" onMatch="NEUTRAL" onMismatch="DENY"/>
				<ThresholdFilter level="warn" onMatch="NEUTRAL" onMismatch="ACCEPT"/>
				<ThresholdFilter level="error" onMatch="NEUTRAL" onMismatch="DENY"/>
				<ThresholdFilter level="fatal" onMatch="DENY" onMismatch="NEUTRAL"/>
			</Filters>
		</Appender>
	</Appenders>

	<Loggers>
		<Logger name="customLog" level="trace" additivity="false">
			<AppenderRef ref="File" />
		</Logger>	

		<Root level="all">
			<!--<AppenderRef ref="File" level="trace"/>-->
			<AppenderRef ref="STDOUT" level="warn"/>
		</Root>
	</Loggers>

</Configuration>
